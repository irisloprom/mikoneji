{
  "compilerOptions": {
    // Entorno / m√≥dulo
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    // Layout
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": ".",

    // Tipos / libs
    "types": ["node"],
    "lib": ["ES2020"],

    // Interop y utilidades
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,

    // Salidas
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Comprobaciones
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true

    // Opcionales recomendadas (descomenta cuando quieras endurecer reglas)
    // "noImplicitReturns": true,
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
    // "noFallthroughCasesInSwitch": true
  },
  "include": ["src"]
}